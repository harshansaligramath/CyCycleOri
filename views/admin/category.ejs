    <% if(typeof message !=='undefined' ) { %>
      <script>setTimeout(() => document.getElementById("addb").click(), 100)</script>
      <%} %>

        <div class="page-wrapper" >
          <div class="content-wrapper">
            <div class="container-xxl flex-grow-2 container-p-y">
              <div class="card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Categories</h4>
                    <div class="table-responsive">
                      <table style="margin-left: 25%;   width: 60%" class="table table-hover table-striped " style="table-layout: fixed;">
                        <thead>
                          <tr>
                            <th scope="col">SI NO</th>
                            <th scope="col">Category Name</th>
                            <th scope="col">Actions</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if( category.length> 0){ %>
                            <% for(let i=1;i <=category.length; i++){ %>
                              <tr>
                                <th scope="row">
                                  <%= i %>
                                </th>
                                <td>
                                  <%= category[i-1].name %>
                                </td>
                                <td>
                                  <a class="text-danger"
                                    onclick="return confirm('do you want to edit <%= category[i-1].name %>?')"
                                    href="/admin/editCategory?id=<%= category[i-1]._id %>"><i style="color: #ff0000;"
                                      class="m-r-5 mdi mdi-border-color"></i>Edit</a>
                                  <a class="text-danger"
                                    onclick="return confirm('do you want to delete <%= category[i-1].name %>?')"
                                    href="/admin/deleteCategory?id=<%= category[i-1]._id %>"><i style="color: #ff0000;"
                                      class="m-r-5 mdi mdi-border-color"></i>Delete</a><br>
                                </td>
                              </tr>
                              <% }} else { %>
                                <tr>
                                  <td colspan="5">Category Not Found</td>
                                </tr>
                                <% } %>

                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div  style="background-color: #ded5d5;" class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
          aria-hidden="false">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div  class="modal-content">
              <div class="modal-header" style="margin-right: 30p;">
                <h5 style="margin-left: 55%;"  class="modal-title" id="exampleModalLongTitle">ADD CATEGORY</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <form action="category" method="post">
                <div class="modal-body">
                  <label class="form-label" for="form3Example3c">Enter New
                    Category</label>
                  <input type="text" id="form3Example3c" class="form-control" name="category" required /> <br>
                  <% if(typeof message !=='undefined' ) { %>
                    <p style="color: rgb(199, 185, 185); font-weight: bold">
                      <%= message %>
                    </p>
                    <% } %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">cancel</button>
                  <button type="submit" class="btn btn-primary">Confirm</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="false">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">EDIT CATEGORY</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <form action="category" method="post">
              <div class="modal-body">
                <label class="form-label" for="form3Example3c">Enter New
                  Category</label>
                <input type="text" id="form3Example3c" class="form-control" name="category" required /> <br>
                <% if(typeof message !=='undefined' ) { %>
                  <p style="color: rgb(144, 135, 135); font-weight: bold">
                    <%= message %>
                  </p>
                  <% } %>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">cancel</button>
                <button type="submit" class="btn btn-primary">Confirm</button>
              </div>
            </form>
          </div>
        </div>
      </div>
        <div class="buy-now">
          <button style="margin-left: 45%;" id="addb" class="btn btn-danger btn-buy-now"data-toggle="modal" data-target="#add">ADD CATEGORY</button>
        </div>
