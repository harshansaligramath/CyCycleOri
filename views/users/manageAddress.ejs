      <div class="col-lg-9 my-lg-0 my-1" style="padding-left: 25%;">
        <% if(address){ %>
        <div class="card mb-4 bg-light">
          <div class="card mb-3 bg-light">
            <div class="card-header py-3">
              <h5 class="mb-0">Saved Address</h5>
            </div>
            <div class="card-body bg-light">
              <div class="row mb-4">
                <% for(let key of address){%>
                  <div class="col" style="border: 1px solid orange;border-radius: 8px;">
                    <div class="form-outline">
                      <%= key.firstname %>
                      <%=key.lastname%><br>
                      <%= key.address %> <br>
                      <%= key.city %> , <%= key.state %><br>
                      <%= key.country %><br>
                      Pin: <%= key.zip %><br>
                      Phone: <%= key.mobile %><br>
                    </div>
                    <a href="/editAddress?id=<%-key._id%>" style="height: 30px;" class="btn btn-primary  btn-xxs rounded">EDIT</a>
                    
                    <a onclick="return confirm('do you want to delete?')" href="/deleteAddress?id=<%-key._id%>" style="height: 30px;" class="btn btn-danger  btn-xxs rounded">DELETE</a>
                  </div>
                  <%}%>
              </div>
            </div>
          </div>
        </div>
        <% } %>
